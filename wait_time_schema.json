{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "train_id": {
                "type": "string"
            },
            "stop_id": {
                "type": "string"
            },
            "wait_time": {
                "type": "integer"
            },
            "recorded_time": {
                "type": "integer",
                "minimum": 0
            }
        },
        "required": ["train_id", "stop_id", "wait_time"],
        "additionalProperties": false
    }
}
